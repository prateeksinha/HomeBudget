<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
    <TextView
        android:id="@+id/tvTotalBalance"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:text="Total \nBalance"
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="2.5dp"
        android:padding="12dp"
        android:background="@drawable/front_box"
        />
    <TextView
        android:id="@+id/tvAddIncome"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:text="Add\nIncome"
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="2.5dp"
        android:padding="12dp"
        android:background="@drawable/front_box"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        >
        <TextView
            android:id="@+id/tvShowIncome"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="Show \nIncome"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2.5dp"
            android:padding="12dp"
            android:background="@drawable/front_box"
            />
        <TextView
            android:id="@+id/tvAddExpences"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="Add\nExpenses"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="2.5dp"
            android:padding="12dp"
            android:background="@drawable/front_box"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        >
        <TextView
            android:id="@+id/tvShowExpences"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="Show \nExpenses"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2.5dp"
            android:padding="12dp"
            android:background="@drawable/front_box"
            />
        <TextView
            android:id="@+id/tvHelp"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="Help\n"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="5dp"
            android:padding="12dp"
            android:background="@drawable/front_box"
            />

    </LinearLayout>
    <View
        android:layout_height="5dp"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:background="#00AA44"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tvTotalBalanceShow"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Total Balance"
            android:padding="12dp"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tvIncomeShow"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Total Income"
            android:padding="12dp"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tvExpencesShow"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Total Expenses"
            android:padding="12dp"
            android:textSize="15sp"
            />
    </LinearLayout>

</LinearLayout>