<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:text="Update IncomeList"
        android:textColor="#00FF00"
        android:textSize="22sp"
        android:padding="12dp"
        android:gravity="center"
    />
    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#000000"
        />
    <EditText
        android:id="@+id/etIncomeCategory"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Add Income Category"
        android:padding="12dp"
        android:lines="1"
        android:layout_margin="8dp"
        android:background="@drawable/front_box"
        />
    <EditText
        android:id="@+id/etIncomeAmount"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Add Income Amount(In Rs.)"
        android:padding="12dp"
        android:lines="1"
        android:layout_margin="8dp"
        android:background="@drawable/front_box"
        />
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="0"
        android:orientation="horizontal"
        >

    <TextView
        android:id="@+id/tvIncomeDate"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="8"
        android:hint="Select Income Date"
        android:padding="15dp"
        android:textSize="18sp"
        android:lines="1"
        android:layout_margin="8dp"
        android:background="@drawable/front_box"
        />
        <ImageView
            android:id="@+id/ivDatePicker"
            android:layout_height="45dp"
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:background="@mipmap/ic_launcher"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        >
        <TextView
            android:id="@+id/tvUpdateIncome"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="Update"
            android:textStyle="bold"
            android:textSize="22sp"
            android:padding="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:background="@drawable/front_box"
            />
        <TextView
            android:id="@+id/tvCancelUpdate"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="Cancel"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/front_box"
            />
    </LinearLayout>
</LinearLayout>